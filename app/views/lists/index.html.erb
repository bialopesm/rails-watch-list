<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t4.ftcdn.net/jpg/02/71/50/69/360_F_271506927_WWFfd92jDIIDx6DgMflakU14o5jRPgBm.jpg);">
  <div class="container">
    <h1><strong>Create your movie wishlist</strong></h1>
    <p>Categorize your movie lists </p>
  </div>
</div>

<div class="row d-flex justify-content-evenly">
  <div class="m-2">
    <div class="center">
      <%= link_to 'Create a new list', new_list_path, class: 'btn btn-primary' %>
    </div>
    <div class="container">
     <h2>Your movie lists</h2>
    </div>
  </div>

  <div class="my-lists">
    <% @lists.each do |list| %>
      <div class="col-3 card m-3 text-center" style="height: 50px">
        <div class="m-2">
          <%= link_to list.name, list_path(list), class: "text-center text-decoration-none" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
