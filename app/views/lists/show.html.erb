<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= bookmark.comment %>
    </li>
  <% end %>
</ul>
<p><%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %></p>
<p><%= link_to 'Back to lists', lists_path %></p>
<p><%= link_to 'Delete list', lists_path(@lists),
data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
