<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.istockphoto.com/id/1058727850/vector/abstract-shiny-background-with-blank-film-strips-and-copy-space.jpg?s=612x612&w=0&k=20&c=8o62Z8rY_RQFpqg7fPVCEzvD4iUCG_3Zvkohu0lv1dY=)">
<h1><%= @list.name %></h1>
</div>

<div class="mt-3">
  <div class="row d-flex justify-content-evenly">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-3 col-3 p-3" style="height: 200px; width: 250px;">
        <div class="card-body d-flex flex-column justify-content-between">
          <div class="text-center">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text text-muted"><%= bookmark.comment %></p>
          </div>
          <div class="text-center">
            <%= link_to "Remove this movie", bookmark_path(bookmark),
                class: "btn btn-danger btn-sm",
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-success text-white' %>

<%= link_to 'Back to lists', lists_path, class: 'btn btn-info text-white' %>

<%= link_to "Delete this list", list_path(@list),
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
    class: 'btn btn-danger text-white' %>
